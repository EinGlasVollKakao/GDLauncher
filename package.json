{
  "name": "gdlauncher",
  "version": "2.0.0",
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "license": "GPL-3.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev -parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "app:dev": "concurrently \"tauri dev\" \"turbo run dev --scope=gdlib --scope=app\"",
    "app:build": "\"turbo run build --scope=gdlib --scope=app\" && tauri build",
    "tauri": "tauri",
    "web:dev": "turbo run dev --scope=web",
    "web:build": "turbo run build --scope=web"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.0.0-beta.10",
    "concurrently": "^6.5.1",
    "prettier": "^2.5.1",
    "turbo": "1.0.24"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "build/**",
          ".svelte-kit/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  }
}
